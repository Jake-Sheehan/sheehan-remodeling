---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<h2>{title}</h2>

<style>
    h2 {
        font-family: "Black Ops One", system-ui;
        text-align: center;
        text-transform: uppercase;
        font-size: 3rem;
        color: var(--font-light);
        background: var(--primary);
        margin: 0;
        margin-bottom: 2rem;
        padding: 1rem;
        width: 100%;
    }
</style>
