---
import type { EntryFieldTypes } from "contentful";
import { contentful_client } from "../lib/contentful";
import CheckMark from "./Check-Mark.astro";

interface GuaranteeSkeleton {
    contentTypeId: "guarantee";
    fields: {
        title: EntryFieldTypes.Text;
        description: EntryFieldTypes.Text;
    };
}

const data =
    await contentful_client.withoutUnresolvableLinks.getEntries<GuaranteeSkeleton>(
        {
            content_type: "guarantee",
        },
    );

const guarantees = data.items;
---

<section id="guarantee" class="breakout">
    <div class="container">
        {
            guarantees.map((guarantee) => {
                return (
                    <article>
                        <h2>
                            <CheckMark />
                            {guarantee.fields.title}
                        </h2>
                        <p>{guarantee.fields.description}</p>
                    </article>
                );
            })
        }
    </div>
</section>

<style>
    #guarantee {
        margin: 2rem 0;
    }

    .container {
        display: flex;
        flex-flow: column nowrap;
        justify-content: center;
        align-items: center;
        gap: 2%;
    }

    article {
        flex-basis: 100%;
    }

    h2 {
        text-transform: uppercase;
        font-size: 2rem;
    }

    p {
        text-align: justify;
    }

    @media only screen and (min-width: 1200px) {
        .container {
            flex-flow: row wrap;
        }

        article {
            flex-basis: 49%;
        }
    }
</style>
