---
import CheckMark from "./Check-Mark.astro";

interface Props {
    title: string;
    description: string;
}

const { title, description } = Astro.props;
---

<article>
    <h2>
        <CheckMark />
        {title}
    </h2>
    <p>{description}</p>
</article>

<style>
    article {
        flex-basis: 100%;
        display: flex;
        flex-flow: column nowrap;
        justify-content: center;
        align-items: center;
        gap: 0.25em;
    }

    h2 {
        text-transform: uppercase;
    }

    p {
        text-align: justify;
    }

    h2,
    p {
        margin: 0;
    }

    @media only screen and (min-width: 1200px) {
        article {
            flex-basis: 49%;
        }
    }
</style>
